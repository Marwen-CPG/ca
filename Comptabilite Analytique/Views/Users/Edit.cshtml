@model  AspNet.Identity.AdoNet.IdentityUser
  @{
      ViewBag.Title = "Modifier l'utilisateur";
  }
  
  <h2>Modifier l'utilisateur</h2>
  
 
  <hr />
  @using (Html.BeginForm())
  {
      @Html.AntiForgeryToken()
      @Html.ValidationSummary(true)
      @Html.HiddenFor(model => model.Id)
      @Html.HiddenFor(model => model.PasswordHash)
      @Html.HiddenFor(model => model.AccessFailedCount)
      @Html.HiddenFor(model => model.EmailConfirmed)
      @Html.HiddenFor(model => model.LockoutEnabled)
      @Html.HiddenFor(model => model.LockoutEndDateUtc)
      @Html.HiddenFor(model => model.PhoneNumberConfirmed)
      @Html.HiddenFor(model => model.SecurityStamp)
      @Html.HiddenFor(model => model.TwoFactorEnabled)
      <div class="form-horizontal col-lg-10">
  
         
              <div class="form-group">
                  <label class="control-label ">    Nom d'utilisateur  :
                      </label> @Html.TextBoxFor(model => model.UserName, null, new { @class = "form-control col-md-2" })
</div>
              <div class="form-group">
                  <label class="control-label ">   E-mail  : </label>
                      @Html.TextBoxFor(model => model.Email, null, new { @class = "form-control col-md-2" })
</div>
              <div class="form-group">
                  <label class="control-label ">
                      Numero de telephone :</label>
                      @Html.TextBoxFor(model => model.PhoneNumber, null, new { @class = "form-control col-md-2" })
</div>
          <div class="form-group">
              <label class="control-label "> Mot de passe : </label>
              @Html.Password("password", null, new { @class = "form-control col-md-2" })<br />
          </div>
            <hr />
          <input type="submit" value="Valider" class="btn btn-warning btn-block"  /><br />
         </div>
 
 }
<hr /><br /><br />
<div class="col-lg-12">
    @*@Html.ActionLink("Retourner vers Gestionnaire d'utilisateurs", "Index")*@
    <a class="btn-primary btn-outline btn" href="@Url.Action("Index", "Users")"> <span class=" glyphicon glyphicon-arrow-left"></span> Retourner vers Gestionnaire d'utilisateurs</a>

</div>