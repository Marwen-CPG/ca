@{
    ViewBag.Title = "Liste des Sièges ";
}

<h2>Liste des Sièges</h2>
<div class="btn-group pull-right   " role="group">
    <button type="button" class="btn btn-default dropdown-toggle pull-right  " data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Mode d'affichage
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
        <li><a href="@Url.Action("Index","Siege")">Tableau </a></li>
        <li><a href="@Url.Action("Siege","Grid")">Grid</a></li>
    </ul>
</div> <br />
<hr />
<table id="list" class="col-md-12"></table>
<div id="pager"></div>
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function myfunction() {
            var pageWidth = $("#list").parent().width() - 100;
            $('#list').jqGrid({
                caption: "Liste des sièges ",
                url: '/Grid/getSiege/',
                datatype: "json",
                contentType: "application/json; charset-utf-8",
                mtype: 'GET',
                colNames: ['NUMERO_SIEGE', 'LIBELLE_FR', '  LIBELLE_AR', 'NUMERO_SIEGE_COMPTABLE'  ],
                colModel: [
            { name: 'NUMERO_SIEGE', index: 'NUMERO_SIEGE', sorttype: "int", width: (pageWidth * (25 / 100)) },
            { name: 'LIBELLE_FR', index: 'LIBELLE_FR', width: (pageWidth * (25 / 100)) },
            { name: 'LIBELLE_AR', index: 'LIBELLE_AR', width: (pageWidth * (25 / 100)) },
              { name: 'NUMERO_SIEGE_COMPTABLE', index: 'NUMERO_SIEGE_COMPTABLE', sorttype: "int", width: (pageWidth * (25 / 100)) },
        

                ],
                rowNum: 25,

                rowList: [10, 20,25 , 30, 40],
                width: null,
                shrinkToFit: false,
                pager: jQuery('#pager'),
                height: '100%',
              //  autowidht: true,
                loadonce: true,
                jsonReader: {
                    root: "rows",
                    page: "page",
                    total: "total",
                    records: "records",

                },

            });

            jQuery("#list").jqGrid('navGrid', '#pager', { edit: false, add: false, del: false });
        });

    </script>
}








